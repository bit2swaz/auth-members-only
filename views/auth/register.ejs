<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">Register</h2>
      </div>
      <div class="card-body">
        <%- include('../partials/messages') %>
        
        <form action="/auth/register" method="POST">
          <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" name="firstName" required
              value="<%= locals.errors && errors.find(e => e.param === 'firstName') ? '' : (locals.oldInput ? oldInput.firstName : '') %>">
            <% if (locals.errors && errors.find(e => e.param === 'firstName')) { %>
              <div class="text-danger"><%= errors.find(e => e.param === 'firstName').msg %></div>
            <% } %>
          </div>
          
          <div class="mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" required
              value="<%= locals.errors && errors.find(e => e.param === 'lastName') ? '' : (locals.oldInput ? oldInput.lastName : '') %>">
            <% if (locals.errors && errors.find(e => e.param === 'lastName')) { %>
              <div class="text-danger"><%= errors.find(e => e.param === 'lastName').msg %></div>
            <% } %>
          </div>
          
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required
              value="<%= locals.errors && errors.find(e => e.param === 'email') ? '' : (locals.oldInput ? oldInput.email : '') %>">
            <% if (locals.errors && errors.find(e => e.param === 'email')) { %>
              <div class="text-danger"><%= errors.find(e => e.param === 'email').msg %></div>
            <% } %>
          </div>
          
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <% if (locals.errors && errors.find(e => e.param === 'password')) { %>
              <div class="text-danger"><%= errors.find(e => e.param === 'password').msg %></div>
            <% } %>
          </div>
          
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            <% if (locals.errors && errors.find(e => e.param === 'confirmPassword')) { %>
              <div class="text-danger"><%= errors.find(e => e.param === 'confirmPassword').msg %></div>
            <% } %>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Register</button>
          </div>
        </form>
        
        <div class="text-center mt-3">
          <p>Already have an account? <a href="/auth/login">Login here</a></p>
        </div>
      </div>
    </div>
  </div>
</div> 