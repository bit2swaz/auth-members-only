<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center">Join the Club</h2>
      </div>
      <div class="card-body">
        <%- include('../partials/messages') %>
        
        <form action="/auth/join-club" method="POST">
          <div class="mb-3">
            <label for="passcode" class="form-label">Enter Passcode</label>
            <input type="password" class="form-control" id="passcode" name="passcode" required>
            <% if (locals.errors && errors.find(e => e.param === 'passcode')) { %>
              <div class="text-danger"><%= errors.find(e => e.param === 'passcode').msg %></div>
            <% } %>
          </div>
          
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Join Club</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div> 